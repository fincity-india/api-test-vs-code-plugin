{
  "name": "@fincity/api-tester",
  "displayName": "API Tester",
  "description": "To test Rest and Graph API based on definition",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Testing",
    "Programming Languages",
    "Other"
  ],
  "author": "Kiran Kumar Grandhi",
  "activationEvents": [
    "onCustomEditor:api-tester.apitEditor",
    "onCustomEditor:api-tester.varEditor"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "api-tester.apitEditor",
        "displayName": "API Test",
        "selector": [
          {
            "filenamePattern": "*.apit"
          }
        ]
      },
      {
        "viewType": "api-tester.varEditor",
        "displayName": "API Test Variables",
        "selector": [
          {
            "filenamePattern": "*.var"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "start": "concurrently \"webpack --watch\"  \"cd ../api-tester-webview && npm start\""
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "concurrently": "7.3.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "@fincity/kirun-js": "^1.1.1"
  }
}
